<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2><%= @customer.full_name %>さんの会員情報編集</h2>
      <%= form_with model:@customer,url: admin_customer_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :id, "会員ID" %>
          <%= f.hidden_field :id, class: "form-control telephone_number" %>
        </div>
        <div class="form-group">
          <%= f.label :full_name, "氏名" %>
          <%= f.text_field :last_name, class: "form-control last_name" %>
          <%= f.text_field :first_name, class: "form-control first_name" %>
        </div>
        <div class="form-group">
          <%= f.label :full_name_kana, "フリガナ" %>
          <%= f.text_field :last_name_kana, class: "form-control last_name_kana" %>
          <%= f.text_field :first_name_kana, class: "form-control first_name_kana" %>
        </div>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号" %>
          <%= f.text_field :postal_code, class: "form-control postal_code" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control address" %>
        </div>
        <div class="form-group">
          <%= f.label :telephone_number, "電話番号" %>
          <%= f.text_field :telephone_number, class: "form-control telephone_number" %>
        </div>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control email" %>
        </div>
        <div class="form-group">
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :customer_status_false, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :customer_status_true, "退会" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
