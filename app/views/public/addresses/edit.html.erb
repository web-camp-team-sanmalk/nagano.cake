<div class="container">
  <div class="row">
    <div class="col-sm-12  px-sm-0 mx-auto">
      <h2 class="red-border">配送先登録/一覧</h2>
      <%= form_with model: @address, url: address_path do |f| %>
        <table class='table table-borderless'>
          <tbody>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td><%= f.text_field :postal_code, class: "form-control black-border", placeholder: "0000000" %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "宛名" %></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit "変更内容を保存" ,class: "btn btn-sm btn-success " %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
