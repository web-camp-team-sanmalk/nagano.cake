<h1>ジャンル一覧・追加</h1>

<%= form_with model: [:admin, @genre], local: true do |f| %>
<thead>
  <tr>
    <th>ジャンル名</th>
    <th><%= f.text_field :name %></th>
    <th><%= f.submit "新規登録" %></th>
  </tr>
</thead>
<% end %>

<thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
</thead>

<tbody>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
  <% end %>
</tbody>