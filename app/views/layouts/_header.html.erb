<header>
  <nav class="navbar navbar-expand-lg navbar-light ">
    <div class="container">
      <div class="navbar-brand">
        <%= link_to root_path do %>
          <%= image_tag 'logo.png', size:"200x200" %>
        <% end %>
      </div>

      <ul class="navbar-nav m-3">
        <% if customer_signed_in? %>
          <li class="nav-item mr-5 pt-2">
            ようこそ！<%= current_customer.last_name %><%= current_customer.first_name %>さん！！
          </li>
          <li button type="botton" class="m-3 btn btn-outline-secondary"><%= link_to " マイページ", customer_path(current_customer), class: 'text-dark align-middle' %></li>
