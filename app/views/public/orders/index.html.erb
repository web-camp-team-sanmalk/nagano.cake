<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="mt-3">注文履歴一覧</h4>
      <table class="table-light table table-hover">
        <thead class="table-secondary">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postcode %></ br>
              <%= order.address %></ br>
              <%= order.name %></ br>
            </td>
            <td>
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %></ br>
              <% end %>
            </td>
            <td><%= order.total_price %>円</td>
            <td><%= order.buy_status %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-dark btn-sm" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>