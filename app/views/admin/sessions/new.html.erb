
<div class="container">
  <div class="row"><h4 class="col-md-3 col-sm-3 bg-light text-center">管理者ログイン</h4></div>
    <div class="row">
      <div class="col-12">
        <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
          <div class="field row mt-5 ">
            <%= f.label :メールアドレス ,class:"col-4 text-center" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email"  ,class:"form-control col-4" %>
          </div>
          <div class="field row  mt-3 ">
            <%= f.label :パスワード,class:"col-4 text-center" %>
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control col-4"  %>
          </div>
          <div class="row actions mt-5">
            <div class=" col text-center">
            <%= f.submit "ログイン" ,class:"btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
      <%= render "admin/shared/links" %>
    
   