<div class="offset-2 mb-5">
	<mark class="h4 bg-light ml-5 mb-5">注文履歴一覧</mark>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <table class="table-light table">
        <thead class="table-secondary">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postal_code %></ br>
              <%= order.address %></ br>
              <%= order.name %></ br>
            </td>
            <td>
              <% order.order_details.each do |order_details| %>
              <%= order_details.item.name %></ br>
              <% end %>
            </td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_path(order), class: "btn btn-primary btn-sm" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>